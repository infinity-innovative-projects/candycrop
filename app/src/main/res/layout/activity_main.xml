<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".candycrop.MainActivity" android:id="@+id/main_layout">
    <TextView
            android:text="CandyCrop can be used as View like this"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_description"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/candyCropView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" android:layout_marginBottom="8dp"/>
    <com.workwithinfinity.android.candycrop.CandyCropView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/candyCropView"
            app:layout_constraintTop_toBottomOf="@+id/text_description"
            app:layout_constraintBottom_toTopOf="@+id/btn_select_src" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:bg_color="@android:color/white"/>
    <Button
            android:text="Select Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_select_src"
            app:layout_constraintTop_toBottomOf="@+id/candyCropView"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_crop"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="Or you can launch it as an activity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/btn_select_src"
            app:layout_constraintBottom_toTopOf="@+id/btn_activity_demo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Show Activity Demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_activity_demo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" android:layout_marginTop="8dp"/>
    <Button
            android:text="Crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_crop"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_select_src"
            app:layout_constraintStart_toEndOf="@+id/btn_select_src" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>